<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Industrial Dark Mode Theme for ASSANHANÄ°L TECH-ASSIST -->
    <style name="Theme.TechAssist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color - Neon Blue -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        
        <!-- Secondary brand color - Neon Green -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background - AMOLED Black -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Legacy theme for compatibility -->
    <style name="Theme.BAKIMASHA3" parent="Theme.TechAssist" />

</resources>
