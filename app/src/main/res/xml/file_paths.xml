<?xml version="1.0" encoding="utf-8"?>
<paths>
    <!-- External files directory for Excel reports -->
    <external-files-path
        name="reports"
        path="reports/" />
    
    <!-- Photos directory for captured images -->
    <external-files-path
        name="photos"
        path="photos/" />
    
    <!-- Backups directory -->
    <external-files-path
        name="backups"
        path="backups/" />
    
    <!-- Root external files -->
    <external-files-path
        name="external_files"
        path="." />
    
    <!-- Cache directory for temporary files -->
    <cache-path
        name="cache"
        path="/" />
</paths>
